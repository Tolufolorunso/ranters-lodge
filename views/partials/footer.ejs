<div class="login-register" id="login-register">
    <form class="form-tag active" id="login-form">
        <h1 class="">Login</h1>
        <div class="form-group">
            <input type="text" placeholder="Enter email" name="email" id="login-email" />
        </div>
        <div class="form-group">
            <input type="password" name="password" placeholder="Enter Password" />
        </div>
        <p><small>By signing up you agree to the terms</small></p>
        <div class="form-group form-tag__btn">
            <button type="submit" class="btn blue " id="login">Login</button>
        </div>
    </form>
    <form method="POST" style="display: block;" class="form-tag register-form" id="register-form" novalidate>
        <h1>Register</h1>
        <div class="form-group">
            <input type="text" placeholder="Enter Username" name="username"
                value="<%= typeof name !== 'undefined' ? name : '' %>" class="" />
        </div>
        <div class="form-group">
            <input type="email" placeholder="Enter email" name="email"
                value="<%= typeof email !== 'undefined' ? email : '' %>" class="" />
        </div>
        <!-- <p>
            <label>
